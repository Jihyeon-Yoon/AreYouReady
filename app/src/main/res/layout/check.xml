<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //독후감
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="독후감"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ("
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_bookPercent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%) "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginLeft="75dp"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:id="@+id/textView_bookProgress"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 40"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    //독후감 진행바
    <ProgressBar
        android:id="@+id/progressBar_book"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:indeterminateOnly="false"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:max="40"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f0f0f0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    //봉사활동
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="봉사 활동"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    //봉사 횟수
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="횟수"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ("
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_volunNumPercent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%) "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginLeft="75dp"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:id="@+id/textView_volunNumProgress"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    //봉사 횟수 진행바
    <ProgressBar
        android:id="@+id/progressBar_volunteerNum"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:indeterminateOnly="false"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:max="10"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="3" />

    //봉사 시간
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="시간"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ("
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_volunTimePercent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%) "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginLeft="75dp"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:id="@+id/textView_volunTimeProgress"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 20"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    //봉사 시간 진행바
    <ProgressBar
        android:id="@+id/progressBar_volunteerTime"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:indeterminateOnly="false"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:max="20"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f0f0f0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    //이수 학점
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="이수 학점"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ("
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView_creditPercent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%) "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginLeft="75dp"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:id="@+id/textView_creditProgress"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_creditTotal"
            android:text=" / 120"
            android:textColor="#3ab93a"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    //이수 학점 진행바
    <ProgressBar
        android:id="@+id/progressBar_credit"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:indeterminateOnly="false"
        android:minHeight="20dp"
        android:maxHeight="20dp"
        android:max="120"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="100" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#f0f0f0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="현재"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="남음"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    </LinearLayout>



    //독후감
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="독후감"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/textView_bookNow"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="40"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <ImageButton
            android:id="@+id/bookPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus"
            android:scaleType="fitXY"
            android:background="#e6e1e1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/bookMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/minus"
            android:scaleType="fitXY"
            android:background="#e6e1e1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/textView_bookRemain"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="40"
            android:layout_marginLeft="40dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    //봉사 활동
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="봉사 활동"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/textView_volunNumNow"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <ImageButton
            android:id="@+id/volNumPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus"
            android:scaleType="fitXY"
            android:background="#e6e1e1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/volNumMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/minus"
            android:scaleType="fitXY"
            android:background="#e6e1e1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView_volunNumRemain"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginLeft="40dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="     "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/textView_volunTimeNow"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <ImageButton
            android:id="@+id/volTimePlus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plus"
            android:scaleType="fitXY"
            android:background="#e6e1e1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/volTimeMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/minus"
            android:scaleType="fitXY"
            android:background="#e6e1e1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/textView_volunTimeRemain"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_marginLeft="40dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    //이수 과목
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="이수 과목"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/textView_creditNow"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="120"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>


        <TextView
            android:id="@+id/creditPlus"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/creditMinus"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/textView_creditRemain"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="120"
            android:layout_marginLeft="40dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학점"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_update"
        android:text="업데이트"
        android:layout_marginTop="3dp"/>

</LinearLayout>